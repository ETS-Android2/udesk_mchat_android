<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/udesk_color_bg_white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/udesk_50"
        android:background="#f2f2f2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/udesk_278"
            android:layout_height="@dimen/udesk_34"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/search_view_bg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="@dimen/udesk_16"
                android:layout_height="@dimen/udesk_16"
                android:layout_marginLeft="@dimen/udesk_12"
                android:layout_marginRight="@dimen/udesk_12"
                android:layout_marginTop="@dimen/udesk_10"
                android:src="@drawable/iv_search" />

            <View
                android:layout_width="0.3dip"
                android:layout_height="@dimen/udesk_13"
                android:layout_marginRight="@dimen/udesk_12"
                android:layout_marginTop="@dimen/udesk_11"
                android:background="@color/color_999999" />

            <EditText
                android:id="@+id/et_search_msg"
                android:layout_width="190dp"
                android:layout_height="fill_parent"
                android:background="@null"
                android:cursorVisible="true"
                android:ellipsize="end"
                android:gravity="left|center"
                android:singleLine="true"
                android:textColor="@color/color_999999"
                android:textColorHint="@color/color_999999"
                android:textCursorDrawable="@drawable/edit_cursor"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_clear"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="@dimen/udesk_10"
                android:layout_marginRight="@dimen/udesk_10"
                android:layout_marginTop="@dimen/udesk_10"
                android:src="@drawable/icon_delete"
                android:visibility="gone" />
        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/conversation_ll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <cn.udesk.widget.swipelistview.PullToRefreshSwipeMenuListView
            android:id="@+id/lv_conversation"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="@color/transparent"
            android:divider="@null"
            android:fadingEdge="none"
            android:scrollbars="none"
            android:scrollingCache="false" />

        <LinearLayout
            android:id="@+id/no_data_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/udesk_120"
                android:layout_height="@dimen/udesk_120"
                android:layout_gravity="center_vertical|center_horizontal"
                android:src="@drawable/no_converstion_tips" />

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>