<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/udesk_66"
    android:background="@drawable/listview_item_selector_bg">

    <RelativeLayout
        android:id="@+id/left"
        android:layout_width="@dimen/udesk_72"
        android:layout_height="@dimen/udesk_64"
        android:layout_alignParentLeft="true">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/udesk_50"
            android:layout_height="@dimen/udesk_50"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/udesk_6"
            android:layout_marginLeft="@dimen/udesk_11"
            android:layout_marginRight="@dimen/udesk_11"
            android:layout_marginTop="@dimen/udesk_6"
            fresco:failureImage="@drawable/udesk_im_default_user_avatar"
            fresco:placeholderImage="@drawable/udesk_im_default_user_avatar" />

        <cn.udesk.widget.BadgeView
            android:id="@+id/id_unread_tips"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/udesk_23"
            android:layout_alignRight="@id/iv_head"
            android:layout_alignTop="@id/iv_head"
            android:layout_marginRight="-4.0dip"
            android:layout_marginTop="-2.0dip"
            android:gravity="center"
            android:minWidth="@dimen/udesk_23"
            android:textColor="@android:color/white"
            android:textSize="@dimen/defalut_largr_small_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/udesk_64"
        android:layout_toRightOf="@+id/left"
        android:gravity="left|top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/udesk_32"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_nickName"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/udesk_8"
                android:layout_weight="3"
                android:ellipsize="end"
                android:gravity="left|top"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/px32tosp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/udesk_16"
                android:layout_marginTop="@dimen/udesk_8"
                android:layout_weight="1"
                android:gravity="right|top"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/px24tosp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/udesk_30"
            android:ellipsize="end"
            android:gravity="left|center"
            android:singleLine="true"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/px28tosp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/defalut_line_height"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/udesk_72"
        android:background="@color/color_d8d8d8" />

</RelativeLayout>