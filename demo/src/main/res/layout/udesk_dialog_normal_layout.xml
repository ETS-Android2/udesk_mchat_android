<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/android:white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/udeskdemo_customer_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/udesk_multimerchant_20"
        android:textColor="@color/android:black"
        android:textSize="@dimen/udesk_multimerchant_sp16" />

    <EditText
        android:id="@+id/udeskdemo_custome_edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/udesk_multimerchant_20"
        android:layout_marginRight="@dimen/udesk_multimerchant_20"
        android:background="@drawable/udesk_edit_bg"
        android:textColor="#666666"
        android:hint="请输入商户的euid"
        android:textColorHint="#cccccc"
        android:textSize="@dimen/udesk_multimerchant_sp15"
       />


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/udesk_multimerchant_10"
        android:layout_marginTop="@dimen/udesk_multimerchant_20"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/udesk_multimerchant_30"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/udeskdemo_cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/udeskdemo_ok"
                android:gravity="center"
                android:padding="10dip"
                android:text="@string/udesk_multimerchant_cancel"
                android:textColor="@color/udesk_multimerchant_custom_dialog_cancle_btn_color"
                android:textSize="@dimen/udesk_multimerchant_sp16" />

            <TextView
                android:id="@+id/udeskdemo_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dip"
                android:text="@string/udesk_multimerchant_sure"
                android:textColor="@color/udesk_multimerchant_custom_dialog_sure_btn_color"
                android:textSize="@dimen/udesk_multimerchant_sp16" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>