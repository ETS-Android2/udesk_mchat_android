<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_d8d8d8">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/conversation"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/udesk_40"
            android:layout_margin="10dip"
            android:background="@drawable/udesk_btn_bg"
            android:gravity="center"
            android:text="@string/udesk_conversion_tips"
            android:textColor="#0D253E"
            android:textSize="16sp"

            />

        <TextView
            android:id="@+id/history_conversation"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/udesk_40"
            android:layout_margin="10dip"
            android:background="@drawable/udesk_btn_bg"
            android:gravity="center"
            android:text="历史会话"
            android:textColor="#0D253E"
            android:textSize="16sp"

            />

        <TextView
            android:id="@+id/merchant_unread_msg"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/udesk_40"
            android:layout_margin="10dip"
            android:background="@drawable/udesk_btn_bg"
            android:gravity="center"
            android:text="指定商户未读消息数量"
            android:textColor="#0D253E"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/all_unread_msg"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/udesk_40"
            android:layout_margin="10dip"
            android:background="@drawable/udesk_btn_bg"
            android:gravity="center"
            android:text="所有商户未读消息数量"
            android:textColor="#0D253E"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/msg_callback"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/udesk_40"
            android:layout_margin="10dip"
            android:background="@drawable/udesk_btn_bg"
            android:gravity="center"
            android:text="设置接受消息的回调"
            android:textColor="#0D253E"
            android:textSize="16sp"

            />

        <TextView
            android:id="@+id/commity_callback"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/udesk_40"
            android:layout_margin="10dip"
            android:background="@drawable/udesk_btn_bg"
            android:gravity="center"
            android:text="设置咨询对象发送的链接的点击回调"
            android:textColor="#0D253E"
            android:textSize="16sp"

            />


        <TextView
            android:id="@+id/merchant_unread_count"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/udesk_40"
            android:layout_margin="10dip"
            android:background="@drawable/udesk_btn_bg"
            android:gravity="center"
            android:textColor="#0D253E"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/all_unread_count"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/udesk_40"
            android:layout_margin="10dip"
            android:background="@drawable/udesk_btn_bg"
            android:gravity="center"
            android:textColor="#0D253E"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/receive_msg"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/udesk_40"
            android:layout_margin="10dip"
            android:background="@drawable/udesk_btn_bg"
            android:gravity="center"
            android:textColor="#0D253E"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/add_navigation"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/udesk_40"
            android:layout_margin="10dip"
            android:background="@drawable/udesk_btn_bg"
            android:gravity="center"
            android:textColor="#0D253E"
            android:textSize="16sp"
            android:text="添加导航兰"
           />
        <TextView
            android:id="@+id/add_extraFunction"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/udesk_40"
            android:layout_margin="10dip"
            android:background="@drawable/udesk_btn_bg"
            android:gravity="center"
            android:textColor="#0D253E"
            android:textSize="16sp"
            android:text="添加自定义按钮和回调"
           />

    </LinearLayout>
</ScrollView>